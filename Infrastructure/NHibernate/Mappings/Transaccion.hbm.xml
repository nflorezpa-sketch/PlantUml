<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="ApplicationCore" namespace="ApplicationCore.Domain.EN">
  <class name="Transaccion" table="Transaccion">
    <id name="Id" column="Id" type="long">
      <generator class="hilo">
        <param name="table">NHibernateUniqueKey</param>
        <param name="column">NextHigh</param>
        <param name="max_lo">100</param>
      </generator>
    </id>
    <property name="Fecha" column="Fecha" type="DateTime" not-null="true" />
    <property name="Total" column="Total" type="decimal" not-null="true" />
    <property name="MetodoPago" column="MetodoPago" type="string" not-null="true" />
    <property name="TipoOperacion" column="TipoOperacion" type="ApplicationCore.Domain.Enums.TipoOperacion, ApplicationCore" not-null="true" />
    
    <many-to-one name="Usuario" class="Usuario" column="UsuarioId" not-null="true" />
    <many-to-one name="Pedido" class="Pedido" column="PedidoId" unique="true" />
  </class>
</hibernate-mapping>

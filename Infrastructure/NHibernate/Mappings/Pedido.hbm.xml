<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="ApplicationCore" namespace="ApplicationCore.Domain.EN">
  <class name="Pedido" table="Pedido">
    <id name="Id" column="Id" type="long">
      <generator class="hilo">
        <param name="table">NHibernateUniqueKey</param>
        <param name="column">NextHigh</param>
        <param name="max_lo">100</param>
      </generator>
    </id>
    <property name="Total" column="Total" type="decimal" not-null="true" />
    
    <many-to-one name="Usuario" class="Usuario" column="UsuarioId" not-null="true" />
    <one-to-one name="Transaccion" class="Transaccion" property-ref="Pedido" />
    
    <set name="Videojuegos" table="PedidoVideojuego" lazy="true">
      <key column="PedidoId" />
      <many-to-many class="Videojuego" column="VideojuegoId" />
    </set>
  </class>
</hibernate-mapping>
